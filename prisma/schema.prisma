generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  Email String @id @unique
  username String @unique 
  Password String
  name String 
  age Int
  height Float
  weight Float
  bodytype String 
  traininglevel String
  goal String
  JoinDate DateTime @default(now())
  CurrentBadge String @default("Noobie")
  Journey String[]
  Diet Diet[]
  Exercise Exercise[]
  refcode     String?

}

model Diet {
  id        Int      @id @default(autoincrement())

  User      User     @relation(fields: [userId], references: [Email])
  userId    String
  meal      String[]
  calories  Int
  date      DateTime @default(now())
  pdfurl    String
}

model Exercise {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [Email])
  userId      String
  type        String
  workout     String[]
  duration    Int
  date        DateTime @default(now())
  pdfurl      String
}


